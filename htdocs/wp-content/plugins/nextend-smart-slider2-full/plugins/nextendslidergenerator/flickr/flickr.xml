<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="nextendslidergenerator" method="upgrade">
    <name>Nextend Smart Slider generator: Flickr</name>
    <author>Roland Soos</author>
    <creationDate>2013</creationDate>
    <copyright>Copyright (C) 2013 nextendweb.com. All rights reserved.</copyright>
    <license>GNU General Public License</license>
    <authorEmail>roland@nextendweb.com</authorEmail>
    <authorUrl>http://www.nextendweb.com</authorUrl>
    <version>1.0.0</version>
    <description></description>
    <files>
        <filename plugin="flickr">flickr.php</filename>
        <filename>auth.php</filename>
        <filename>configuration.xml</filename>
        <folder>peoplephotogallery</folder>
        <folder>peoplephotoset</folder>
        <folder>peoplephotostream</folder>
        <folder>api</folder>
        <folder>element</folder>
        <filename>index.html</filename>
    </files>
    <params addPath="/libraries/nextend/joomla/elements">
        <param name="config" type="configurator" identifier="smartslider" manual="http://www.nextendweb.com/wiki/smart-slider-documentation/" support="http://www.nextendweb.com/smart-slider/#support" label="" xml="/plugins/nextendslidergenerator/flickr/configuration.xml" />
    </params>
    <config>
        <fields name="params" addfieldpath="/libraries/nextend/joomla/fields">
            <fieldset name="basic">
                <field name="config" type="configurator" identifier="smartslider" manual="http://www.nextendweb.com/wiki/smart-slider-documentation/" support="http://www.nextendweb.com/smart-slider/#support" label="" xml="/plugins/nextendslidergenerator/flickr/configuration.xml" />
            </fieldset>
        </fields>
    </config>
</install>
